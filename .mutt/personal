# Stop lusers wasting my time

#macro index  \ei  "|/usr/local/sbin/IT-luser-bounce\rd"
#macro index  \ek  "|/usr/local/bin/req -mcreate -\rd"
#macro index  \em  "|/usr/local/bin/req -comment  -\Cb\Cb"

#macro pager  \ei  "|/usr/local/sbin/IT-luser-bounce\rD"
#macro pager  \ek  "|/usr/local/bin/req -mcreate -\rD"
#macro pager  \em  "|/usr/local/bin/req -comment  -\Cb\Cb"

macro pager    U  "qs=junk-mail\r"
macro compose  I  "c\Cuis\rr\Cuis\rf\Cu\r"
macro compose  S  "s\Ca[it-support@new #] \Cb\Cb"
#macro compose X "r\Cucomputer-manager@new.ox.ac.uk\r"


