# N.B. These defaults can get altered by other files in
# ~/.mutt/folders

bind pager z noop

  set index_format='%Z%4C %[%b %d] %-18.18f %s%>  %g %c'
  set pgp_verify_sig
  set pager_index_lines=12
unset signature

# resets mutt.pub/.mutt/folders/notmuch-vfolder.pub
bind index $ sync-mailbox

source ~/.mutt/colours/DEFAULT
