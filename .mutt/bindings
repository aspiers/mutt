# Some personalised bindings are in ~/.mutt/personal.


## ========================
## Bindings for attach
## ========================

#  bind  attach ' '     select-entry
#  bind  attach \Cg     exit
   macro attach <left>  "qkv"
   macro attach <right> "qjv"

## ======================
## Bindings for index
## ======================


   bind index <pagedown>  next-page
   bind index <pageup>    previous-page
   bind index <home>      first-entry
   bind index <end>       last-entry
                         
   bind index g           group-reply
                         
   bind index \Cv         forget-passphrase
   bind index <           previous-page
   bind index >           next-page
                         
#   bind index ^           first-entry
   bind index =           first-entry
   bind index *           last-entry
#  bind index <home>      first-entry
#  bind index <end>       last-entry
                         
   bind index $           sync-mailbox
                         
   bind index +           next-page
   bind index -           previous-page

#  bind index P           recall-message
   bind index L           list-reply
#  bind index  \t         next-unread
#  bind index ,\t         previous-unread

   bind index y           collapse-thread
   bind index Y           collapse-all

   macro index  i  "\$c=inboxes/\t\t\tj"
   macro index  I  "c!\n"

   macro index  B  "|urlview\n"
   macro index  N  "S\r"



## ===========================
## Bindings for pager
## ===========================

   bind pager  <down> next-line
   bind pager  <up>   previous-line
   bind pager  j      next-line         
   bind pager  k      previous-line     
   bind pager  \Cm    next-line         
                      
   bind pager  u      half-up
   bind pager  d      half-down

   bind pager  :      enter-command      

   bind pager  pagedown      next-page
   bind pager  pageup        previous-page     
   bind pager  " "           next-page
   bind pager  <backspace>   previous-page
   bind pager  f             next-page
   bind pager  b             previous-page     

   bind pager  ^   top
   bind pager  g   top
   bind pager  G   bottom

   bind pager  /   search
   bind pager  N   search-next

   bind pager  n   next-undeleted
   bind pager  p   previous-undeleted
   bind pager  P   print-message

   bind pager  L   list-reply
   bind pager  r   reply             
#  bind pager  F   forward-message
   bind pager  D   delete-message

   macro pager $   "q\$"

   macro pager B   "|urlview\n"

   macro pager i   "qi"
   macro pager I   "qc!\n"

   macro pager l   "ql"

   macro pager "w"      ":set invsmart_wrap invmarkers\n" # Toggle wrap stuff
   macro pager "y"      "c?\t"                            # "-y" screen
   macro pager "\e0"    ":set pager_index_lines=0\n"      # Change PIL size
   macro pager "\e1"    ":set pager_index_lines=2\n"      # Change PIL size
   macro pager "\e2"    ":set pager_index_lines=3\n"      # Change PIL size
   macro pager "\e3"    ":set pager_index_lines=4\n"      # Change PIL size
   macro pager "\e4"    ":set pager_index_lines=5\n"      # Change PIL size
   macro pager "\e5"    ":set pager_index_lines=6\n"      # Change PIL size
   macro pager "\e6"    ":set pager_index_lines=7\n"      # Change PIL size
   macro pager "\e7"    ":set pager_index_lines=8\n"      # Change PIL size
   macro pager "\e8"    ":set pager_index_lines=9\n"      # Change PIL size
   macro pager "\e9"    ":set pager_index_lines=10\n"     # Change PIL size

   macro pager "\ef"  "|parp -ev\n"
   macro pager "\et"  "|parp -tv\n"
   macro pager "\er"  "|parp -wv\n"

## ===========================
## Bindings for browser menu
## ===========================

   bind  browser ' '  select-entry
   macro browser  i   "qc^u!\r"


## ===========================
## Bindings for compose menu
## ===========================

   bind  compose  y  noop
   bind  compose  g  send-message
   bind  compose  v  view-attach

   macro compose  F  "f\Cu\r"
   macro compose  P  "qy"
   macro compose  Q  "qn"


## ===========================
## Bindings for line editor
## ===========================

   bind editor <delete> backspace
